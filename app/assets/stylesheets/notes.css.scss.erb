body {
	background:url('../img/bg.jpg') no-repeat;
  background-size: 100% 100%;
  font-family: Arial;
  font-size: 12px ;
  color: #333;
}
::-webkit-input-placeholder { /* WebKit browsers */
    color:    #fff;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color:    #fff;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
    color:    #fff;
}
:-ms-input-placeholder { /* Internet Explorer 10+ */
    color:    #fff;
}

.left-profile {
	padding:20px;
}

h4, li a{
  color: #007ab3;
}
a:hover{
  text-decoration: none;
}
ul{
  margin-left: 0px;
}
ul li{
  list-style-type: none;
  text-align: left;
  padding:5px 0px;
}
li a{
  padding:15px 0px;
}
li a:hover{
  background-color: #007ab3;
  color:#fff;
}

.profileContainer {
  margin-top: 1%;
  background: #fff;
  padding: 20px;
  text-align: center;
  border: solid 3px #d59a62;
  -webkit-box-shadow: -2px 1px 13px rgba(50, 50, 50, 0.49);
  -moz-box-shadow:    -2px 1px 13px rgba(50, 50, 50, 0.49);
  box-shadow:         -2px 1px 13px rgba(50, 50, 50, 0.49);
}
.profileContainer h5{
  display: inline-block;
}
.profileContainer #pin{
  background: #e5e6e6;
  border:solid 2px #333;
  width: 15px;
  height: 15px;
  border-radius: 25px;
}
.profileContainer #avatar{
  width: 170px;
  height: 170px;
  background: #d3d3d3;
  border-radius: 85px;
  margin: 0 auto;
}
.tape{
  position: absolute;
  left: 17%;
}
.dashboard{
  background: url('../img/corkBoard.png');
  width: 81%;
  height: 585px;
  margin-left: -10px;
  border: outset 6px #d59a62;
  -webkit-box-shadow: 1px 1px 12px rgba(50, 50, 50, 0.5);
  -moz-box-shadow:    1px 1px 12px rgba(50, 50, 50, 0.5);
  box-shadow:         1px 1px 12px rgba(50, 50, 50, 0.5);
}
.dashHeader{
  margin: 15px;
}
.dashboard .section{
  display: inline-block;
  text-align: center;
  margin-left: 18px;
}
.dashboard .section .force-overflow{
  min-height: 400px;
}

.dashboard .section img:last-child{
  padding-bottom: 120px;
}

.dashboard .section .drop{
  width: 245px;

}
.scrollbar
{
  margin-left: -30px;
  margin-right: 20px;
  float: left;
  height: 400px;
  overflow-y: hidden;
  overflow: auto;
  margin-bottom: 25px;
}
#dash .scrollbar{
  margin-left: 0px;
}
.dashboard .scrollbar{height: 450px;}
.force-overflow
{
  min-height: 600px;
}

#style-6::-webkit-scrollbar-track
{
  -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
  background-color: #F5F5F5;
}

#style-6::-webkit-scrollbar
{
  width: 10px;
  background-color: #F5F5F5;
}

#style-6::-webkit-scrollbar-thumb
{
  background-color: #F90; 
  background-image: -webkit-linear-gradient(45deg,
                                            rgba(255, 255, 255, .2) 25%,
                        transparent 25%,
                        transparent 50%,
                        rgba(255, 255, 255, .2) 50%,
                        rgba(255, 255, 255, .2) 75%,
                        transparent 75%,
                        transparent)
}

#style-7::-webkit-scrollbar-track
{
  -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
  background-color: #F5F5F5;
  border-radius: 10px;
}

#style-7::-webkit-scrollbar
{
  width: 10px;
  background-color: #F5F5F5;
}

#style-7::-webkit-scrollbar-thumb
{
  border-radius: 10px;
  background-image: -webkit-gradient(linear,
                     left bottom,
                     left top,
                     color-stop(0.44, rgb(122,153,217)),
                     color-stop(0.72, rgb(73,125,189)),
                     color-stop(0.86, rgb(28,58,148)));
}

.each-note {
	background: #fbea75;
	min-width: 130px;
	min-height: 130px;
	-webkit-box-shadow: 2px 2px 5px rgba(50, 50, 50, 0.75);
	-moz-box-shadow:    2px 2px 5px rgba(50, 50, 50, 0.75);
	box-shadow:         2px 2px 5px rgba(50, 50, 50, 0.75);

}

.note-content-foo {
	display: none;
}

.note-udate-form {
	display: none;
}
