					<div class="span3 dashHeader">
						<%= image_tag "anything.png", alt:"Anything" %>
					</div>
				</div>

				<div>
					<div class = "span3 section scrollbar" id = "style-6">
						<div class="force-overflow" ></div>
					</div>
					<div class = "span3 section scrollbar" id = "style-6">
						<div class="force-overflow" ></div>
					</div>
					<div class = "span3 section scrollbar" id = "style-6">
						<div class="force-overflow" ></div>
