<%= t('Edit') %>

<div class="row-fluid">
	<div class="span12">
		<div class="padding20">
			<p class="lead"> Edit <%= @note.title %> </p>

			<div class="top20">
				<%= form_for @note do |f| %>
					<%= f.label :title %>
					<%= f.text_field :title %>

					<br />

					<%= f.label :content %>
					<%= f.text_area :content, rows:3 %>

					<br />

					<%= f.submit "Update", class:"btn" %>
				<% end %>
			</div>
		</div>
	</div>
</div>
